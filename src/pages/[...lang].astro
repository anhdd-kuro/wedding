---
import BaseLayout from "~/layouts/Base.astro"
import Main from "@/components/Main/index.astro"
import Footer from "~/components/Footer.astro"
import Header from "~/components/Header.astro"
import { SITE_TITLE } from "~/consts"

export async function getStaticPaths() {
  return [
    {
      params: {
        lang: undefined,
      },
    },
    {
      params: {
        lang: "vi",
      },
    },
    {
      params: {
        lang: "ja",
      },
    },
  ]
}
---

<BaseLayout>
  <div class="grid h-screen grid-cols-[minmax(350px,20%)_auto_auto_auto_auto]">
    <div
      class="fixed left-0 top-0 hidden bg-green-100 pc:relative pc:col-span-1 pc:block"
    >
      <Header title={SITE_TITLE} />
    </div>
    <div class="col-span-5 min-w-full pc:col-span-4">
      <Main />
      <Footer class="" />
    </div>
  </div>
</BaseLayout>
