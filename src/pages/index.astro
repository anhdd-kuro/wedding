---
import BaseHead from "../components/BaseHead.astro"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts"
import Main from "@/components/Main/index.astro"
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <div class="grid grid-cols-[minmax(350px,20%)_auto_auto_auto_auto] gap-4">
      <div class="col-span-1 bg-green-light">
        <Header title={SITE_TITLE} />
      </div>
      <div class="col-span-4 grid grid-rows-3 gap-4">
        <main class="row-span-1">
          <!-- Main content goes here -->
          <Main />
        </main>
        <Footer class="row-span-1" />
      </div>
    </div>
  </body>
</html>
