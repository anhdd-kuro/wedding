---
import { Icon } from "astro-icon"
import { range, getRandomInt } from "~/utils"

const { count, delayMultiply } = Astro.props
---

{
  range(count || 5, 0).map((i) => (
    <Icon
      data-selector="heart-floating"
      name="heart"
      class="[&.animated]:floating-effect group-hover:floating-effect absolute z-10 duration-200 [&_path]:fill-green-400"
      height={26}
      style={{
        left: `${getRandomInt(0, 80)}%`,
        animationDelay: `${delayMultiply ? i * delayMultiply : i * 0.2}s`,
        opacity: 0,
        animationDuration: "1.5s",
      }}
    />
  ))
}
