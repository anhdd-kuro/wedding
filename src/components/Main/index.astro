---
import { FirstView } from "./FirstView"
import { Icon } from "astro-icon"
import GroomBride from "./GroomBride.astro"
import OurStory from "./OurStory.astro"
import Timeline from "./Timeline.astro"
import Gallery from "./Gallery.astro"
---

<main id="top" class="relative">
  <div class="relative">
    <a
      href="https://goo.gl/maps/yZWFhHm9bXvhWeoSA"
      target="_blank"
      class="absolute bottom-32 left-1/2 z-10 mx-auto -translate-x-1/2 hover:opacity-80 pc:bottom-28"
    >
      <Icon
        name="main_slide_text"
        title="ĐỨC ANH & THUÝ AN 29.10.2023 - DAEWOO HOTEL HÀ NỘI"
        class="w-[80vw] pc:h-[6.8rem] pc:w-auto"
      />
    </a>
    <FirstView client:load />
  </div>
  <GroomBride />
  <OurStory />
  <Timeline />
  <Gallery />
</main>
